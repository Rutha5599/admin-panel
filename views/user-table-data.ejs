

<center>
                <%if(messages.success){%>
            
                    <div class="alert alert-success" style="width: fit-content;">
                        <%=messages.success%>
                    </div>
            
                    <%}%>
                <form method="post" action="/admin/update/<%=updatedata.id%>" enctype="multipart/form-data">
                    <table>
                        UPDATE
                        <tr>
                            <div style="width: 100%; display: flex; flex-wrap: wrap;">
                                <div style="width: 97%; margin-left: 10px; margin-top: 10px;">
                                    USERNAME:-
                                    <input type="text" name="username" value="<%=updatedata.username%>">
                                </div>
                                <div style="width: 97%; margin-left: 10px; margin-top: 10px;">
                                    EMAIL ID:-
                                    <input type="text" name="" value="" id="ee"><br>
                                    OLD EMAIL ID:-<label for=""><%=updatedata.email%></label>
                                </div>
                                <div style="width: 98%; margin-left: 10px; margin-top: 10px;">
                                    img:-
                                    <input type="file" name="img">
                                    
                                  </div>
                        </tr>
                        <input type="submit" value="Submit" onclick="hh()">
                    </form>
            </center>


<script>

    function hh(){
        var dd = document.getElementById('ee').value

        if(dd==""){
            document.getElementById('ee').name=""
            
        }else{
            document.getElementById('ee').name="email"
            
        }
    }
</script>